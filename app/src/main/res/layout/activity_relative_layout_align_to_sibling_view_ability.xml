<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/origin"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="#ccec9a42"
        android:text="origin"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/ID_1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignTop="@id/origin"
        android:layout_toRightOf="@id/origin"
        android:background="#ff1111"
        android:text="ID_1\ntoRightOf=origin\n+alignTop=origin"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/ID_2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@id/ID_1"
        android:layout_below="@id/ID_1"
        android:background="#f96825"
        android:text="ID_2\nalignLeft=ID_1\n+below=ID_1"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/ID_3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@id/origin"
        android:layout_below="@id/ID_2"
        android:background="#da51ec"
        android:text="ID_3\nbelow=ID_2\n+alignLeft=origin"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/ID_4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@id/ID_3"
        android:layout_below="@id/ID_3"
        android:background="#7066e1"
        android:text="ID_4\nglignLeft=ID_3\n+below=ID_3"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/ID_5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/ID_4"
        android:layout_toRightOf="@id/ID_4"
        android:background="#d1ff54"
        android:text="ID_5\nbelow=ID_4\n+toRightOf\n=ID_4"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/ID_6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toRightOf="@id/ID_5"
        android:layout_above="@id/ID_5"
        android:text="ID_6\ntoRightOf=ID_5\n+above=ID_5"
        android:background="#aa00aa00" />

    <!--
            android:background="#bb00bbff"

    -->

</RelativeLayout>