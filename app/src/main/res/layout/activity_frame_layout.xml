<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="#ccec9a42"
        android:text="default" />


    <TextView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:background="#ff1111"
        android:text="layout_gravity=center_horizontal" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="right"
        android:background="#ffff00"
        android:text="layout_gravity=right"
        android:textColor="#000000" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_vertical"
        android:background="#f96825"
        android:text="layout_gravity=center_vertical" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:background="#da51ec"
        android:text="layout_gravity=center" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_vertical|right"
        android:background="#7066e1"
        android:text="layout_gravity=center_vertical | right"
        android:textColor="#000000" />


    <TextView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="bottom"
        android:background="#d1ff54"
        android:text="layout_gravity=bottom"
        android:textColor="#000000" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="bottom|center_horizontal"
        android:background="#aa00aa00"
        android:text="layout_gravity=bottom | center_horizontal" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="bottom|right"
        android:background="#bb00bbff"
        android:text="layout_gravity=bottom | right" />

</FrameLayout>